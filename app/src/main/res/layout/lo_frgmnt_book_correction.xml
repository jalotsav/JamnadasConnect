<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cordntrlyot_frgmnt_bookcorctn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteDialogBg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120jdp"
            android:background="@color/colorPrimaryBlue">

            <LinearLayout
                android:id="@+id/lnrlyot_frgmnt_bookcorctn_bookname"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <!--Book name-->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtinputlyot_frgmnt_bookcorctn_bookname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16jdp"
                    android:layout_marginLeft="@dimen/_32jdp"
                    android:layout_marginRight="@dimen/_16jdp"
                    android:layout_marginStart="@dimen/_32jdp"
                    app:hintTextAppearance="@style/MaterialText.Amber">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtinptet_frgmnt_bookcorctn_bookname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/book_name_sml"
                        android:inputType="textMultiLine"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/grayA8"
                        android:textSize="@dimen/_20jdp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5jdp"
            android:layout_marginLeft="@dimen/_16jdp"
            android:layout_marginRight="@dimen/_16jdp"
            android:layout_marginTop="@dimen/_16jdp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16jdp"
                android:layout_marginRight="@dimen/_16jdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10jdp"
                android:paddingTop="@dimen/_5jdp">

                <!--Stream-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stream_sml"
                        android:textColor="@color/colorPrimaryOrange"
                        android:textSize="@dimen/_10jdp" />

                    <Spinner
                        android:id="@+id/spnr_frgmnt_bookcorctn_stream"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--Standard-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5jdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/standr_sml"
                        android:textColor="@color/colorPrimaryOrange"
                        android:textSize="@dimen/_10jdp" />

                    <Spinner
                        android:id="@+id/spnr_frgmnt_bookcorctn_standr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5jdp"
            android:layout_marginLeft="@dimen/_16jdp"
            android:layout_marginRight="@dimen/_16jdp"
            app:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_16jdp"
                android:layout_marginRight="@dimen/_16jdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10jdp"
                android:paddingTop="@dimen/_5jdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Add-->
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/appcmptbtn_frgmnt_bookcorctn_attchmnt_add"
                        style="@style/MaterialButton.Amber"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35jdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="@dimen/_20jdp"
                        android:paddingRight="@dimen/_20jdp"
                        android:text="@string/add_sml"
                        android:textColor="@color/colorPrimaryBlueMidnight"
                        android:textSize="@dimen/_12jdp"
                        android:visibility="invisible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/appcmptbtn_frgmnt_bookcorctn_attchmnt_add"
                        android:layout_toStartOf="@id/appcmptbtn_frgmnt_bookcorctn_attchmnt_add"
                        android:text="@string/attachment_sml"
                        android:textColor="@color/colorPrimaryOrange"
                        android:textSize="@dimen/_16jdp" />
                </RelativeLayout>

                <ViewSwitcher
                    android:id="@+id/vwswtchr_frgmnt_bookcorctn_steppr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_124jdp"
                    android:layout_marginTop="@dimen/_10jdp">

                    <include layout="@layout/lo_viewswtchr_bookcorctn_viewone" />

                    <include layout="@layout/lo_viewswtchr_bookcorctn_viewtwo" />
                </ViewSwitcher>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!--Save FAB Button-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_frgmnt_bookcorctn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_32jdp"
        android:layout_marginRight="@dimen/_32jdp"
        android:clickable="true"
        android:tint="@color/white"
        app:fabSize="normal"
        app:layout_anchor="@id/lnrlyot_frgmnt_bookcorctn_bookname"
        app:layout_anchorGravity="right|end|bottom"
        app:srcCompat="@drawable/ic_done_black_24dp" />

    <ProgressBar
        android:id="@+id/prgrsbr_frgmnt_bookcorctn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20jdp"
        android:visibility="gone" />
</android.support.design.widget.CoordinatorLayout>