<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="NestedWeights">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="3">

        <!--Specimen Copy & Book Correction-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rltvlyot_frgmnt_dashbrd_specimencopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryBlueMidnight">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/imgcd_image"
                    android:paddingBottom="@dimen/_16jdp"
                    android:paddingLeft="@dimen/_22jdp"
                    android:paddingRight="@dimen/_22jdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_folder_open_black_56dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/blackTrsprnt80">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10jdp"
                        android:text="@string/specimen_copy_sml"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltvlyot_frgmnt_dashbrd_bookcorctn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryLightGreen">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/imgcd_image"
                    android:paddingBottom="@dimen/_16jdp"
                    android:paddingLeft="@dimen/_22jdp"
                    android:paddingRight="@dimen/_22jdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_playlist_add_check_black_56dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/blackTrsprnt80">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10jdp"
                        android:text="@string/book_correction_sml"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--END Specimen Copy & Book Correction-->

        <!--Suggestions-->
        <RelativeLayout
            android:id="@+id/rltvlyot_frgmnt_dashbrd_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryAmber">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/imgcd_image"
                android:paddingBottom="@dimen/_16jdp"
                android:paddingLeft="@dimen/_22jdp"
                android:paddingRight="@dimen/_22jdp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_school_black_56dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/blackTrsprnt80">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/_10jdp"
                    android:text="@string/suggestions_sml"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
        <!--END Suggestions-->

        <!--My Profile & Notifications-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/rltvlyot_frgmnt_dashbrd_myprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryCyan">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/imgcd_image"
                    android:paddingBottom="@dimen/_16jdp"
                    android:paddingLeft="@dimen/_22jdp"
                    android:paddingRight="@dimen/_22jdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_folder_shared_black_56dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/blackTrsprnt80">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10jdp"
                        android:text="@string/myprofile_sml"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltvlyot_frgmnt_dashbrd_notifctns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryRed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/imgcd_image"
                    android:paddingBottom="@dimen/_16jdp"
                    android:paddingLeft="@dimen/_22jdp"
                    android:paddingRight="@dimen/_22jdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_notifications_black_56dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/blackTrsprnt80">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10jdp"
                        android:text="@string/notifctns_sml"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--My Profile & Notifications-->
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>