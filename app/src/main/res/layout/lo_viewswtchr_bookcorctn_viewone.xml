<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgvw_frgmnt_bookcorctn_attachimage"
        android:layout_width="@dimen/_80jdp"
        android:layout_height="@dimen/_80jdp"
        android:contentDescription="@string/imgcd_image"
        app:srcCompat="@drawable/ic_pictures_flat_128dp" />

    <View
        android:layout_width="@dimen/_1jdp"
        android:layout_height="@dimen/_70jdp"
        android:layout_marginLeft="@dimen/_16jdp"
        android:layout_marginRight="@dimen/_16jdp"
        android:background="@color/grayC5" />

    <ImageView
        android:id="@+id/imgvw_frgmnt_bookcorctn_attachaudio"
        android:layout_width="@dimen/_80jdp"
        android:layout_height="@dimen/_80jdp"
        android:contentDescription="@string/imgcd_image"
        app:srcCompat="@drawable/ic_microphone_flat_128dp" />
</LinearLayout>