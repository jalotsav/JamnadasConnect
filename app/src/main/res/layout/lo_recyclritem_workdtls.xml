<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10jdp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_recylrvw_item_workdtls_firstchr"
        android:layout_width="@dimen/_40jdp"
        android:layout_height="@dimen/_40jdp"
        android:background="@drawable/drwbl_round"
        android:gravity="center"
        android:padding="@dimen/_5jdp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_18jdp"
        android:visibility="visible"
        tools:text="j" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8jdp"
        android:layout_marginStart="@dimen/_8jdp"
        android:orientation="vertical">

        <!--School Name & Remove-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgvw_recylrvw_item_workdtls_remove"
                android:layout_width="@dimen/_22jdp"
                android:layout_height="@dimen/_22jdp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/imgcd_image"
                android:tint="@color/colorPrimaryRed"
                app:srcCompat="@drawable/ic_remove_circle_outline_black_24dp" />

            <TextView
                android:id="@+id/tv_recylrvw_item_workdtls_schoolname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/imgvw_recylrvw_item_workdtls_remove"
                android:layout_toStartOf="@id/imgvw_recylrvw_item_workdtls_remove"
                android:text="@string/schoolname_sml"
                android:textColor="@color/black"
                android:textSize="@dimen/_16jdp" />
        </RelativeLayout>

        <!--Standard, Subject & Stream-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5jdp">

            <TextView
                android:id="@+id/tv_recylrvw_item_workdtls_stream"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimaryBlue"
                android:textSize="@dimen/_14jdp"
                tools:text="Gujarati" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/tv_recylrvw_item_workdtls_stream"
                android:layout_toStartOf="@id/tv_recylrvw_item_workdtls_stream"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recylrvw_item_workdtls_standr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12jdp"
                    tools:text="9-10, " />

                <TextView
                    android:id="@+id/tv_recylrvw_item_workdtls_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12jdp"
                    tools:text="Maths" />
            </LinearLayout>
        </RelativeLayout>

        <!--Separator-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="@dimen/_5jdp"
            android:background="@color/grayA8" />
    </LinearLayout>
</LinearLayout>